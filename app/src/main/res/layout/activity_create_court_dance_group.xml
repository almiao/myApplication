<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateCourtDanceGroupActivity">

    <TextView
            android:id="@+id/defineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/define"
            android:typeface="serif"
            android:textSize="30sp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="@dimen/dp10"
            tools:layout_editor_absoluteY="10dp"
            tools:layout_editor_absoluteX="0dp"/>

    <ImageView
            android:layout_margin="@dimen/dp20"
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="1dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:background="@drawable/shape_img"
    />


    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:onClick="UpdatePhoto"
            android:text="上传封面图片"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="跑团名称"
    />

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="请输入舞团名称"
              android:lines="1"
              android:inputType="text"
              android:layout_marginStart="@dimen/dp10"
              android:layout_marginEnd="@dimen/dp10"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="成立时间"
    />

    <EditText
              android:id="@+id/group_create_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="请选择舞团成立时间"
              android:layout_marginStart="@dimen/dp10"
              android:layout_marginEnd="@dimen/dp10"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="活跃地点"
    />

    <EditText
              android:id="@+id/group_place"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="请选择舞团活跃地点，有助于同伴加入"
              android:layout_marginStart="@dimen/dp10"
              android:layout_marginEnd="@dimen/dp10"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp10"
    />

</LinearLayout>